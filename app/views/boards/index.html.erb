<%= javascript_include_tag "http://maps.google.com/maps/api/js?v=3&sensor=false", "boards/map.js", "boards/jquery.fullPage.min.js", "boards/jquery.flip.min.js", "boards/init.js" %>

<div id="fullpage">

  <div class="section">
    <div id="map"></div>

    <%= link_to image_tag("build-button.png", {:border => "0", :alt => "BUILD", :id => "build-button"}), new_board_path %>
    <!-- <a href="boards/new"><img src="assets/build-button.png" alt="BUILD" id="build-button"></a> -->
  </div>
  <div class="section">
    <div class="flipper">
	    <div class="front">

	    </div>
	    <div class="back">

	    </div>
    </div>


    <% @boards.each do |board| %>

      <p>
        <td><%= board.username %></td>
      </p>

      <p>
        <td><%= image_tag(board.image_url) %></td>
      </p>

      <p>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </p>


    <% end %>


  </div>
</div>
